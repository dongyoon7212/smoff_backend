<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smoff.smoff.mapper.PledgeMapper">

    <resultMap id="PledgeResultMap" type="com.smoff.smoff.entity.Pledge">
        <id property="pledgeId" column="pledge_id" />
        <result property="challengerId" column="challenger_id" />
        <result property="signatureImg" column="signature_img" />
        <result property="createDt" column="create_dt" />
    </resultMap>

    <insert id="addPledge" >
        insert into
            pledge_tb
        values
            (0, #{challengerId}, #{signatureImg}, now())
    </insert>

    <select id="getPledgeByChallengerId" resultMap="PledgeResultMap">
        select
            *
        from
            pledge_tb
        where
            challenger_id = #{challengerId}
    </select>
</mapper>